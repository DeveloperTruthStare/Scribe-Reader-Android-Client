<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom|center"
    android:background="@color/background_contrast"
    android:id="@+id/main"
    tools:context=".ui.reader.Reader">
    <ProgressBar
        android:id="@id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:progressTint="@android:color/holo_green_dark"
        android:progressDrawable="@drawable/rounded_progress_bar"
        android:max="1000"
        android:progress="200"
        android:scaleY="1"/>
    <TextView
        android:id="@+id/progressText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBar"
        android:gravity="center"
        android:foregroundGravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reader_title"
        android:layout_below="@+id/progressText"
        android:text="@string/placeholder_book_title"
        android:gravity="center"
        android:maxLines="1"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:id="@+id/recyclerLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_below="@+id/reader_title"
        android:layout_above="@+id/button_container"
        android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_margin="8dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/new_button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:text="@string/undoButton"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_left_only"
            android:layout_marginEnd="8dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/continue_button"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="âž”"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_right_only"
            android:backgroundTint="@android:color/holo_green_dark"/>
    </LinearLayout>

</RelativeLayout>

